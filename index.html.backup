<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>3D Racing Typing Game</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Arial', sans-serif;
            overflow: hidden;
            background: #000;
        }

        #gameCanvas {
            display: block;
            width: 100%;
            height: 100vh;
        }

        /* Login/Signup Modal */
        #authModal {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.95);
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 1000;
        }

        #authModal.hidden {
            display: none;
        }

        .auth-container {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            padding: 40px;
            border-radius: 20px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
            min-width: 400px;
        }

        .auth-container h2 {
            color: #fff;
            margin-bottom: 30px;
            text-align: center;
            font-size: 32px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-group label {
            display: block;
            color: #fff;
            margin-bottom: 8px;
            font-weight: bold;
        }

        .form-group input {
            width: 100%;
            padding: 12px;
            border: 2px solid rgba(255, 255, 255, 0.3);
            border-radius: 8px;
            background: rgba(255, 255, 255, 0.1);
            color: #fff;
            font-size: 16px;
            outline: none;
            transition: all 0.3s;
        }

        .form-group input:focus {
            border-color: #4ECDC4;
            background: rgba(255, 255, 255, 0.2);
        }

        .btn {
            width: 100%;
            padding: 14px;
            border: none;
            border-radius: 8px;
            font-size: 18px;
            font-weight: bold;
            cursor: pointer;
            transition: all 0.3s;
            margin-top: 10px;
        }

        .btn-primary {
            background: #4ECDC4;
            color: #000;
        }

        .btn-primary:hover {
            background: #45B7D1;
            transform: translateY(-2px);
        }

        .btn-secondary {
            background: rgba(255, 255, 255, 0.2);
            color: #fff;
        }

        .btn-secondary:hover {
            background: rgba(255, 255, 255, 0.3);
        }

        .error-message {
            background: rgba(255, 107, 107, 0.3);
            color: #FF6B6B;
            padding: 10px;
            border-radius: 8px;
            margin-bottom: 15px;
            display: none;
        }

        .error-message.show {
            display: block;
        }

        /* Game UI */
        #ui {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            padding: 20px;
            pointer-events: none;
        }

        #typingArea {
            position: absolute;
            bottom: 50px;
            left: 50%;
            transform: translateX(-50%);
            background: rgba(0, 0, 0, 0.8);
            padding: 30px;
            border-radius: 10px;
            min-width: 600px;
            text-align: center;
            pointer-events: all;
        }

        #phrase {
            font-size: 24px;
            color: #fff;
            margin-bottom: 20px;
            letter-spacing: 2px;
            font-weight: bold;
        }

        .char {
            display: inline-block;
            transition: all 0.1s;
        }

        .char.correct {
            color: #4ECDC4;
        }

        .char.incorrect {
            color: #FF6B6B;
            background: rgba(255, 107, 107, 0.2);
        }

        .char.current {
            border-bottom: 3px solid #FFA07A;
            animation: blink 0.8s infinite;
        }

        @keyframes blink {
            0%, 50% { opacity: 1; }
            51%, 100% { opacity: 0.3; }
        }

        #input {
            width: 100%;
            padding: 15px;
            font-size: 18px;
            border: 2px solid #4ECDC4;
            border-radius: 5px;
            background: rgba(255, 255, 255, 0.1);
            color: #fff;
            outline: none;
        }

        #progressBar {
            width: 100%;
            height: 8px;
            background: rgba(255, 255, 255, 0.2);
            border-radius: 4px;
            margin-top: 15px;
            overflow: hidden;
        }

        #progressFill {
            height: 100%;
            background: linear-gradient(90deg, #4ECDC4, #45B7D1);
            width: 0%;
            transition: width 0.2s;
        }

        #scoreboard {
            background: rgba(0, 0, 0, 0.7);
            padding: 15px;
            border-radius: 10px;
            color: #fff;
            max-width: 300px;
        }

        #scoreboard h3 {
            margin-bottom: 10px;
            color: #4ECDC4;
        }

        .player-score {
            display: flex;
            justify-content: space-between;
            padding: 5px 0;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        .player-score .name {
            font-weight: bold;
        }

        #stats {
            position: absolute;
            bottom: 20px;
            right: 20px;
            background: rgba(0, 0, 0, 0.7);
            padding: 15px;
            border-radius: 10px;
            color: #fff;
            min-width: 200px;
        }

        .stat-row {
            display: flex;
            justify-content: space-between;
            margin: 5px 0;
        }

        .stat-label {
            color: #FFA07A;
        }

        #colorPicker {
            position: absolute;
            top: 20px;
            right: 20px;
            background: rgba(0, 0, 0, 0.7);
            padding: 15px;
            border-radius: 10px;
            pointer-events: all;
        }

        #colorPicker h4 {
            color: #fff;
            margin-bottom: 10px;
        }

        .color-options {
            display: flex;
            gap: 10px;
            flex-wrap: wrap;
        }

        .color-option {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            cursor: pointer;
            border: 3px solid transparent;
            transition: all 0.3s;
        }

        .color-option:hover {
            transform: scale(1.1);
        }

        .color-option.selected {
            border-color: #fff;
            box-shadow: 0 0 10px rgba(255, 255, 255, 0.5);
        }

        #raceFinishBanner {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            padding: 40px 60px;
            border-radius: 20px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
            z-index: 999;
            display: none;
        }

        #raceFinishBanner.show {
            display: block;
            animation: bounceIn 0.5s;
        }

        @keyframes bounceIn {
            0% { transform: translate(-50%, -50%) scale(0.3); opacity: 0; }
            50% { transform: translate(-50%, -50%) scale(1.05); }
            100% { transform: translate(-50%, -50%) scale(1); opacity: 1; }
        }

        #raceFinishBanner h2 {
            color: #FFD700;
            font-size: 48px;
            margin-bottom: 15px;
            text-align: center;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
        }

        #raceFinishBanner p {
            color: #fff;
            font-size: 24px;
            text-align: center;
        }

        #userInfo {
            position: absolute;
            top: 20px;
            left: 20px;
            background: rgba(0, 0, 0, 0.7);
            padding: 15px;
            border-radius: 10px;
            color: #fff;
        }

        #userInfo h4 {
            color: #4ECDC4;
            margin-bottom: 5px;
        }
    </style>
</head>
<body>
    <!-- Login/Signup Modal -->
    <div id="authModal">
        <div class="auth-container">
            <h2 id="authTitle">Login to Race</h2>
            <div class="error-message" id="errorMessage"></div>

            <form id="authForm">
                <div class="form-group">
                    <label for="username">Username</label>
                    <input type="text" id="username" placeholder="Enter username" required>
                </div>

                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" placeholder="Enter password" required>
                </div>

                <button type="submit" class="btn btn-primary" id="submitBtn">Login</button>
                <button type="button" class="btn btn-secondary" id="toggleAuthMode">Create Account</button>
            </form>
        </div>
    </div>

    <!-- Game Canvas -->
    <canvas id="gameCanvas"></canvas>

    <!-- Race Finish Banner -->
    <div id="raceFinishBanner">
        <h2 id="winnerText">üèÅ RACE FINISHED! üèÅ</h2>
        <p id="winnerName"></p>
    </div>

    <!-- Game UI -->
    <div id="ui">
        <div id="userInfo">
            <h4 id="usernameDisplay"></h4>
            <p>High Score: <span id="highScore">0</span></p>
        </div>

        <div id="scoreboard">
            <h3>Racers</h3>
            <div id="playerList"></div>
        </div>

        <div id="colorPicker">
            <h4>Car Color</h4>
            <div class="color-options">
                <div class="color-option selected" style="background: #FF6B6B;" data-color="#FF6B6B"></div>
                <div class="color-option" style="background: #4ECDC4;" data-color="#4ECDC4"></div>
                <div class="color-option" style="background: #45B7D1;" data-color="#45B7D1"></div>
                <div class="color-option" style="background: #FFA07A;" data-color="#FFA07A"></div>
                <div class="color-option" style="background: #98D8C8;" data-color="#98D8C8"></div>
                <div class="color-option" style="background: #F7DC6F;" data-color="#F7DC6F"></div>
                <div class="color-option" style="background: #BB8FCE;" data-color="#BB8FCE"></div>
                <div class="color-option" style="background: #FF69B4;" data-color="#FF69B4"></div>
            </div>
        </div>
    </div>

    <div id="typingArea">
        <div id="phrase"></div>
        <input type="text" id="input" placeholder="Start typing to race..." autocomplete="off">
        <div id="progressBar">
            <div id="progressFill"></div>
        </div>
    </div>

    <div id="stats">
        <div class="stat-row">
            <span class="stat-label">WPM:</span>
            <span id="wpm">0</span>
        </div>
        <div class="stat-row">
            <span class="stat-label">Accuracy:</span>
            <span id="accuracy">100%</span>
        </div>
        <div class="stat-row">
            <span class="stat-label">Progress:</span>
            <span id="progress">0%</span>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r128/three.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script>
        // Authentication state
        let currentUser = null;
        let isLoginMode = true;

        // DOM elements
        const authModal = document.getElementById('authModal');
        const authForm = document.getElementById('authForm');
        const authTitle = document.getElementById('authTitle');
        const submitBtn = document.getElementById('submitBtn');
        const toggleAuthModeBtn = document.getElementById('toggleAuthMode');
        const errorMessage = document.getElementById('errorMessage');
        const input = document.getElementById('input');

        // Toggle between login and signup
        toggleAuthModeBtn.addEventListener('click', () => {
            isLoginMode = !isLoginMode;
            if (isLoginMode) {
                authTitle.textContent = 'Login to Race';
                submitBtn.textContent = 'Login';
                toggleAuthModeBtn.textContent = 'Create Account';
            } else {
                authTitle.textContent = 'Create Account';
                submitBtn.textContent = 'Sign Up';
                toggleAuthModeBtn.textContent = 'Back to Login';
            }
            errorMessage.classList.remove('show');
        });

        // Handle authentication form submit
        authForm.addEventListener('submit', async (e) => {
            e.preventDefault();
            const username = document.getElementById('username').value;
            const password = document.getElementById('password').value;

            const endpoint = isLoginMode ? '/api/login' : '/api/signup';

            try {
                const response = await fetch(endpoint, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ username, password })
                });

                const data = await response.json();

                if (response.ok) {
                    currentUser = data.user;
                    authModal.classList.add('hidden');
                    initGame();
                } else {
                    errorMessage.textContent = data.error;
                    errorMessage.classList.add('show');
                }
            } catch (error) {
                errorMessage.textContent = 'Connection error. Please try again.';
                errorMessage.classList.add('show');
            }
        });

        // Three.js setup
        const canvas = document.getElementById('gameCanvas');
        const scene = new THREE.Scene();
        const camera = new THREE.PerspectiveCamera(75, window.innerWidth / window.innerHeight, 0.1, 1000);
        const renderer = new THREE.WebGLRenderer({ canvas: canvas, antialias: true });

        renderer.setSize(window.innerWidth, window.innerHeight);
        renderer.setClearColor(0x87CEEB);
        renderer.shadowMap.enabled = true;

        // Lighting
        const ambientLight = new THREE.AmbientLight(0xffffff, 0.6);
        scene.add(ambientLight);

        const directionalLight = new THREE.DirectionalLight(0xffffff, 0.8);
        directionalLight.position.set(10, 20, 10);
        directionalLight.castShadow = true;
        directionalLight.shadow.mapSize.width = 2048;
        directionalLight.shadow.mapSize.height = 2048;
        scene.add(directionalLight);

        // Create racing track
        function createTrack() {
            const trackGroup = new THREE.Group();

            // Main track surface
            const trackGeometry = new THREE.BoxGeometry(15, 0.2, 100);
            const trackMaterial = new THREE.MeshStandardMaterial({ color: 0x333333 });
            const track = new THREE.Mesh(trackGeometry, trackMaterial);
            track.receiveShadow = true;
            trackGroup.add(track);

            // White lane lines
            for (let i = -40; i < 50; i += 10) {
                const lineGeometry = new THREE.BoxGeometry(0.3, 0.21, 4);
                const lineMaterial = new THREE.MeshBasicMaterial({ color: 0xffffff });
                const line = new THREE.Mesh(lineGeometry, lineMaterial);
                line.position.set(0, 0, i);
                trackGroup.add(line);
            }

            // Side barriers
            const barrierGeometry = new THREE.BoxGeometry(1, 2, 100);
            const barrierMaterial = new THREE.MeshStandardMaterial({ color: 0xff0000 });

            const leftBarrier = new THREE.Mesh(barrierGeometry, barrierMaterial);
            leftBarrier.position.set(-8, 1, 0);
            trackGroup.add(leftBarrier);

            const rightBarrier = new THREE.Mesh(barrierGeometry, barrierMaterial);
            rightBarrier.position.set(8, 1, 0);
            trackGroup.add(rightBarrier);

            // Checkered flag at finish line
            const flagGeometry = new THREE.PlaneGeometry(10, 5);
            const flagTexture = createCheckeredTexture();
            const flagMaterial = new THREE.MeshBasicMaterial({ map: flagTexture, side: THREE.DoubleSide });
            const flag = new THREE.Mesh(flagGeometry, flagMaterial);
            flag.position.set(0, 5, 50);
            trackGroup.add(flag);

            // Ground
            const groundGeometry = new THREE.PlaneGeometry(100, 150);
            const groundMaterial = new THREE.MeshStandardMaterial({ color: 0x228B22 });
            const ground = new THREE.Mesh(groundGeometry, groundMaterial);
            ground.rotation.x = -Math.PI / 2;
            ground.position.y = -0.2;
            ground.receiveShadow = true;
            trackGroup.add(ground);

            return trackGroup;
        }

        // Create checkered flag texture
        function createCheckeredTexture() {
            const canvas = document.createElement('canvas');
            canvas.width = 512;
            canvas.height = 512;
            const ctx = canvas.getContext('2d');

            const squareSize = 64;
            for (let i = 0; i < 8; i++) {
                for (let j = 0; j < 8; j++) {
                    ctx.fillStyle = (i + j) % 2 === 0 ? '#000000' : '#ffffff';
                    ctx.fillRect(i * squareSize, j * squareSize, squareSize, squareSize);
                }
            }

            const texture = new THREE.CanvasTexture(canvas);
            return texture;
        }

        const track = createTrack();
        scene.add(track);

        // Camera position - follow from behind and above
        camera.position.set(0, 8, -45);
        camera.lookAt(0, 0, 0);

        // Player cars in 3D space
        const playerMeshes = new Map();
        let myCarMesh = null;

        // Create car mesh
        function createCarMesh(color) {
            const carGroup = new THREE.Group();

            // Car body
            const bodyGeometry = new THREE.BoxGeometry(2, 1, 3);
            const bodyMaterial = new THREE.MeshStandardMaterial({ color: color });
            const body = new THREE.Mesh(bodyGeometry, bodyMaterial);
            body.castShadow = true;
            body.position.y = 0.5;
            carGroup.add(body);

            // Car top
            const topGeometry = new THREE.BoxGeometry(1.5, 0.8, 1.5);
            const topMaterial = new THREE.MeshStandardMaterial({ color: color });
            const top = new THREE.Mesh(topGeometry, topMaterial);
            top.castShadow = true;
            top.position.set(0, 1.3, -0.3);
            carGroup.add(top);

            // Wheels
            const wheelGeometry = new THREE.CylinderGeometry(0.4, 0.4, 0.3, 16);
            const wheelMaterial = new THREE.MeshStandardMaterial({ color: 0x000000 });

            const wheelPositions = [
                [-1.2, 0.4, 1],
                [1.2, 0.4, 1],
                [-1.2, 0.4, -1],
                [1.2, 0.4, -1]
            ];

            wheelPositions.forEach(pos => {
                const wheel = new THREE.Mesh(wheelGeometry, wheelMaterial);
                wheel.rotation.z = Math.PI / 2;
                wheel.position.set(...pos);
                wheel.castShadow = true;
                carGroup.add(wheel);
            });

            return carGroup;
        }

        // Socket.io connection
        let socket;
        let playerId = null;
        let currentPhrase = '';
        let typedText = '';
        let startTime = null;
        let correctChars = 0;
        let totalChars = 0;
        let currentProgress = 0;

        function initGame() {
            // Display user info
            document.getElementById('usernameDisplay').textContent = currentUser.username;
            document.getElementById('highScore').textContent = currentUser.highScore || 0;

            // Initialize socket connection
            socket = io();

            // Authenticate with server
            socket.emit('authenticate', { username: currentUser.username });

            // Initialize game
            socket.on('init', (data) => {
                playerId = data.playerId;
                currentPhrase = data.phrase;
                displayPhrase(currentPhrase);

                // Create my car
                myCarMesh = createCarMesh(currentUser.color);
                myCarMesh.position.set(0, 0.5, -50);
                scene.add(myCarMesh);
                playerMeshes.set(playerId, myCarMesh);

                // Add existing players
                data.players.forEach(player => {
                    if (player.id !== playerId) {
                        addPlayer(player);
                    }
                });

                // Update color picker
                updateColorPicker(currentUser.color);
            });

            // Player joined
            socket.on('playerJoined', (player) => {
                addPlayer(player);
                updateScoreboard();
            });

            // Player left
            socket.on('playerLeft', (id) => {
                const mesh = playerMeshes.get(id);
                if (mesh) {
                    scene.remove(mesh);
                    playerMeshes.delete(id);
                }
                updateScoreboard();
            });

            // Player typing progress
            socket.on('playerTyping', (data) => {
                const mesh = playerMeshes.get(data.id);
                if (mesh && data.position) {
                    mesh.position.z = data.position.z;
                }
            });

            // Player color changed
            socket.on('playerColorChanged', (data) => {
                const mesh = playerMeshes.get(data.id);
                if (mesh) {
                    mesh.children.forEach(child => {
                        if (child.material && (child.geometry.type === 'BoxGeometry')) {
                            child.material.color.setStyle(data.color);
                        }
                    });
                }
            });

            // Score update
            socket.on('scoreUpdate', (data) => {
                updateScoreboard();
            });

            // Race finished
            socket.on('raceFinished', (data) => {
                const banner = document.getElementById('raceFinishBanner');
                const winnerName = document.getElementById('winnerName');
                winnerName.textContent = `${data.username} wins with ${data.score} points!`;
                banner.classList.add('show');

                setTimeout(() => {
                    banner.classList.remove('show');
                }, 3000);
            });

            // Race reset
            socket.on('raceReset', (data) => {
                currentPhrase = data.phrase;
                displayPhrase(data.phrase);
                resetTyping();

                // Reset all car positions
                playerMeshes.forEach(mesh => {
                    mesh.position.z = -50;
                });
            });

            // New phrase
            socket.on('newPhrase', (phrase) => {
                currentPhrase = phrase;
                displayPhrase(phrase);
                resetTyping();
            });

            // Focus input
            input.focus();
        }

        // Add player to scene
        function addPlayer(player) {
            const mesh = createCarMesh(player.color);
            mesh.position.set(player.position.x, player.position.y, player.position.z);
            scene.add(mesh);
            playerMeshes.set(player.id, mesh);
        }

        // Display phrase
        function displayPhrase(phrase) {
            const phraseEl = document.getElementById('phrase');
            phraseEl.innerHTML = phrase.split('').map((char, i) =>
                `<span class="char" data-index="${i}">${char}</span>`
            ).join('');
        }

        // Color picker functionality
        document.querySelectorAll('.color-option').forEach(option => {
            option.addEventListener('click', () => {
                const color = option.getAttribute('data-color');

                // Update UI
                document.querySelectorAll('.color-option').forEach(opt => opt.classList.remove('selected'));
                option.classList.add('selected');

                // Update my car
                if (myCarMesh) {
                    myCarMesh.children.forEach(child => {
                        if (child.material && (child.geometry.type === 'BoxGeometry')) {
                            child.material.color.setStyle(color);
                        }
                    });
                }

                // Update current user color
                currentUser.color = color;

                // Send to server
                if (socket) {
                    socket.emit('changeColor', { color: color });
                }
            });
        });

        function updateColorPicker(color) {
            document.querySelectorAll('.color-option').forEach(opt => {
                opt.classList.remove('selected');
                if (opt.getAttribute('data-color') === color) {
                    opt.classList.add('selected');
                }
            });
        }

        // Input handling
        input.addEventListener('input', (e) => {
            if (!startTime) startTime = Date.now();

            typedText = e.target.value;
            totalChars++;

            const chars = document.querySelectorAll('.char');
            let allCorrect = true;
            let correctCount = 0;

            chars.forEach((char, i) => {
                char.classList.remove('correct', 'incorrect', 'current');

                if (i < typedText.length) {
                    if (typedText[i] === currentPhrase[i]) {
                        char.classList.add('correct');
                        correctChars++;
                        correctCount++;
                    } else {
                        char.classList.add('incorrect');
                        allCorrect = false;
                    }
                } else if (i === typedText.length) {
                    char.classList.add('current');
                }
            });

            // Calculate progress
            currentProgress = (correctCount / currentPhrase.length) * 100;
            document.getElementById('progressFill').style.width = currentProgress + '%';
            document.getElementById('progress').textContent = Math.round(currentProgress) + '%';

            // Update my car position
            if (myCarMesh) {
                myCarMesh.position.z = -50 + currentProgress;
            }

            // Update stats
            updateStats();

            // Send typing progress
            if (socket) {
                socket.emit('typing', {
                    currentWord: typedText,
                    isTyping: true,
                    progress: currentProgress
                });
            }

            // Check completion
            if (typedText === currentPhrase && allCorrect) {
                completePhrase();
            }
        });

        // Complete phrase
        function completePhrase() {
            const timeElapsed = (Date.now() - startTime) / 1000;
            const points = Math.round((currentPhrase.length / timeElapsed) * 10);

            if (socket) {
                socket.emit('wordComplete', { points: points });
            }
        }

        // Reset typing
        function resetTyping() {
            input.value = '';
            typedText = '';
            startTime = null;
            correctChars = 0;
            totalChars = 0;
            currentProgress = 0;
            document.getElementById('progressFill').style.width = '0%';
            document.getElementById('progress').textContent = '0%';
        }

        // Update stats
        function updateStats() {
            if (startTime) {
                const timeElapsed = (Date.now() - startTime) / 1000 / 60;
                const wordsTyped = typedText.split(' ').length;
                const wpm = Math.round(wordsTyped / timeElapsed) || 0;
                document.getElementById('wpm').textContent = wpm;
            }

            const accuracy = totalChars > 0 ? Math.round((correctChars / totalChars) * 100) : 100;
            document.getElementById('accuracy').textContent = accuracy + '%';
        }

        // Update scoreboard
        function updateScoreboard() {
            const playerList = document.getElementById('playerList');
            const playersArray = Array.from(playerMeshes.keys());

            playerList.innerHTML = playersArray
                .map((id) => {
                    const username = id === playerId ? currentUser.username : `Player ${id.substring(0, 4)}`;
                    return `
                        <div class="player-score">
                            <span class="name">${username}</span>
                            <span>${Math.round(playerMeshes.get(id).position.z + 50)}%</span>
                        </div>
                    `;
                }).join('');
        }

        // Animation loop
        function animate() {
            requestAnimationFrame(animate);

            // Update camera to follow player
            if (myCarMesh) {
                camera.position.z = myCarMesh.position.z - 5;
                camera.lookAt(0, 0, myCarMesh.position.z + 10);
            }

            renderer.render(scene, camera);
        }

        animate();

        // Handle window resize
        window.addEventListener('resize', () => {
            camera.aspect = window.innerWidth / window.innerHeight;
            camera.updateProjectionMatrix();
            renderer.setSize(window.innerWidth, window.innerHeight);
        });
    </script>
</body>
</html>
